generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model books {
  book_id      Int       @id @default(autoincrement())
  title        String
  description  String?   @db.Text
  author       String
  genre        String
  price        Int
  published_at DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  user_id      Int
}
